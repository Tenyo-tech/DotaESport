@using DotaESport.Web.ViewModels.Heroes.ViewModels
@model IEnumerable<AllHeroesViewModel>


@using DotaESport.Common
@{
    this.ViewData["Title"] = "All Heroes";
}
<br>
<br>
<br>

<h1 id="heroName" class="text-center">CHOOSE A HERO</h1>


<br>
<br>
<br>
<div class="container">
    <div class="row">
        <div class="col-4">
            <h1>STRENGTH</h1>
            @foreach (var item in Model.OrderBy(x => x.CreatedOn))
            {
                @if (item.MainAttribute == "STRENGTH")
                {
                    <div class="heroContainer">
                        <img src="@item.ImgUrl" alt="Avatar" class="img-responsive" onmouseover="takeName('@item.Name')">
                    </div>
                }
            }
        </div>

        <div class="col-4">
            <h1>AGILITY</h1>
            @foreach (var item in Model.OrderBy(x => x.CreatedOn))
            {
                @if (item.MainAttribute == "AGILITY")
                {
                    <div class="heroContainer">
                        <img src="@item.ImgUrl" alt="Avatar" class="img-responsive" onmouseover="takeName('@item.Name')">
                    </div>
                }
            }
        </div>

        <div class="col-4">
            <h1>INTELLIGENCE</h1>
            @foreach (var item in Model.OrderBy(x => x.CreatedOn))
            {
                @if (item.MainAttribute == "INTELLIGENCE")
                {
                    <div class="heroContainer">
                        <img src="@item.ImgUrl" alt="Avatar" class="img-responsive" onmouseover="takeName('@item.Name')">
                    </div>
                }
            }
        </div>
    </div>
</div>

